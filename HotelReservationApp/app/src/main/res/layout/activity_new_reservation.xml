<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservation.NewReservationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Nueva Reserva"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Selección de Hotel -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Hotel"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Selección de Habitación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Habitación"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Fecha de Entrada -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Entrada"
            android:textStyle="bold" />

        <DatePicker
            android:id="@+id/datePickerCheckIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_marginBottom="16dp" />

        <!-- Fecha de Salida -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Salida"
            android:textStyle="bold" />

        <DatePicker
            android:id="@+id/datePickerCheckOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_marginBottom="16dp" />

        <!-- Número de Huéspedes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de Huéspedes"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtGuests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce número de huéspedes"
            android:inputType="number"
            android:layout_marginBottom="24dp" />

        <!-- Botón de Crear Reserva -->
        <Button
            android:id="@+id/btnCreateReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Reserva"
            android:textAllCaps="false"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>